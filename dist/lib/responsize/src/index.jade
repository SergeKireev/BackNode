doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Responsize
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')

    // cloud explorer imports
    script(src="lib/bower-cloud-explorer/app/scripts/cloud-explorer.js")

    // responsize imports
    script(src='responsize.js')
    link(href='responsize.css', rel='stylesheet')

    style.
      body {
        background-color: grey;
        margin: 0;
      }

  body
    // ce iframe
    iframe(id="ce-js", frameborder="no", scrolling="no", allowfullscreen="yes",
      data-ce-unifile-url="/api/1.0/"
      data-ce-path="./lib/bower-cloud-explorer/app/")

    // container for Responsize app
    rsz-app#rsz-app
      include rsz/app/app.jade

    // Bootstrap Responsize app
    script.
      initResponsizeApp();

